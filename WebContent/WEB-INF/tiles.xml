<tiles-definitions>
<!-- 타일즈는 *을 2개까지만 사용가능하다. -->
<!-- 중첩경로의 경우 더 상세한 경로를 위쪽에 작성해야 무한루프에 빠지지 않는다. -->
  <definition name="main.member.story.read.*" template="/WEB-INF/views/main/member/story/read/inc/sub-layout.jsp">
    <put-attribute name="header" value="/WEB-INF/views/main/member/story/read/inc/header.jsp" />
    <put-attribute name="main" value="/WEB-INF/views/main/member/story/read/{1}.jsp" />
    <put-attribute name="footer" value="/WEB-INF/views/main/member/story/read/inc/footer.jsp" />
  </definition>
  <definition name="main.member.story.*.*" template="/WEB-INF/views/main/member/story/write/inc/sub-layout.jsp">
    <put-attribute name="header" value="/WEB-INF/views/main/member/story/write/inc/header.jsp" />
    <put-attribute name="main" value="/WEB-INF/views/main/member/story/{1}/{2}.jsp" />
  </definition>
  
</tiles-definitions>